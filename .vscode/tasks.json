{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build C++ File",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-I${workspaceFolder}/include",
				"${file}",
				"-o",
				"${workspaceFolder}/output/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/g++"
		}
	]
}